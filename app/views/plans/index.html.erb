<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        <%= link_to "こんにちは、#{current_user.name}さん", user_path(current_user), class: :greeting__link %>
      </div>
    <%# // ログインしているときは上記を表示する %>
    <% end %>
    <% if @today_schedule.present? %>
      <%= link_to "本日は、#{@today_schedule.title}という予定があります", plan_path(@today_schedule.id), class: :greeting__link2 %>
    <% else %>
      <p>本日の予定はありません</p>
    <% end %>
    <div class="card__wrapper">
    </div>
    <br>
    <div class="col-md-8">
      <%= month_calendar events: @plans do |date, plans| %>
        <%= date.day %>

        <% plans.each do |plan| %>
          <div>
            <%= link_to plan.title, plan %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</main>
