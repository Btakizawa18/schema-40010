<%= form_with model: plan, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"plan_title" %>
  </div>

  <div class="field">
    <%= f.label :detail, "詳細" %><br />
    <%= f.text_area :detail, class: :form__text, id:"plan_detail" %>
  </div>

  <div class="field">
    <%= f.label :goal, "目標" %><br />
    <%= f.text_field :goal, id:"plan_goal" %>
  </div>

  <div class="field">
    <%= f.label :start_time, "時間" %><br />
    <%= f.date_select :start_time, id:"plan_start_time" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>
